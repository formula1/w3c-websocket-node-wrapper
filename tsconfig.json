{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["es6", "dom"],
    "moduleResolution" : "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "outDir": "./build",
    "rootDir": "./src"
  },
  "include": [ "./src" ],
  "exclude": [
    "node_modules",
    "platforms"
  ]
}
